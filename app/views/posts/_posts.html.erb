<div class = "col-md-9">

    <% if user_signed_in? %>
        <h2 class = "text-center">Members Page</h2>
        <div class = "row">
            <div class = "col-md-2">
            <figure class="figure">
                <img src = "https://bulma.io/images/placeholders/64x64.png">                  
            </figure>
            </div>

            <div class = "col-md">
            <%= render 'form' %>
            </div>
        </div>

    <% else %>
        <h2 class = "text-center">Welcome to ClubHouse</h2>
        <p class = "text-center">
            <strong>Sign Up for membership: Create jokes and View other members  </strong>
        </p>

        <p class = "text-center">
            <strong>Sign In if already a member  </strong>
        </p>
    <% end %>


    <% @posts.each do |post| %>
        
        <div class = "row">
        <div class = "col-md-2">
            <% if user_signed_in? %>
                <figure class="figure">
                <img src = "https://bulma.io/images/placeholders/64x64.png">                  
                </figure>
            <% end %>
        </div>

        <div class = "col-md-10 card card-body bg-card">
            <% if user_signed_in? %><p>Create by: <%= post.user.name %></p><% end %>
            <%= post.post %>
        </div>
        
        </div>
        
        <% if user_signed_in? && current_user == post.user%>
        <div class = "row">
        <div class = "col-md-3 col-sm-3 ml-auto icons">
            <%= link_to post, class: "control" do %>
            <span class = 'icon'><i class = 'fa fa-link' aria-hidden = 'true'></i></span>
            <% end %>

            <%= link_to edit_post_path(post), class: "control" do %>
            <span class = 'icon'><i class = 'fa fa-pencil' aria-hidden = 'true'></i></span>
            <% end %>
            

            <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class: "control" do %>
            <span class = 'icon'><i class = 'fa fa-trash-o' aria-hidden = 'true'></i></span>
            <% end %>

            </div>
        </div>
        <% end %>
        
        <br>
    <% end %>
</div>